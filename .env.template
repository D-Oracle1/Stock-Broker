# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=stockbroker
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=stockbroker_db

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here

# JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Backend
BACKEND_PORT=3001
NODE_ENV=development

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# Encryption
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Email (Configure your email service)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=noreply@stockbroker.com

# SMS/2FA (Configure your SMS provider)
SMS_API_KEY=your_sms_api_key
SMS_API_SECRET=your_sms_api_secret

# Payment Gateway (Paystack/Flutterwave Mock)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key
PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-your_flutterwave_secret_key
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-your_flutterwave_public_key

# Market Data
MARKET_DATA_API_KEY=your_market_data_api_key
MARKET_UPDATE_INTERVAL=5000

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=/uploads

# Admin
SUPER_ADMIN_EMAIL=admin@stockbroker.com
SUPER_ADMIN_PASSWORD=change_this_password_now
